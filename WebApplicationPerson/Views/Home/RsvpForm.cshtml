@model WebApplicationPerson.Models.Person

@{
    ViewData["Title"] = "View";
    Layout = null;
}

<!DOCTYPE html>
<htm>
    <head>
        <link rel="stylesheet" href="~/css/styles.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script>

            $(document).ready(function () {
                function ResetForm() {
                    document.getElementById('FormPers').reset();
                }
                $('#snils').mask('000-00-000 00', { 'translation': { 0: { pattern: /[0-9*]/ } } });
            });
        </script>


    </head>
    <h3>Форма ввода данных</h3>
        <meta name="viewport" content="width=device-width">
        <title>Тестовая форма</title>
        <body>
            <div class="panel panel-success">
                <div class="panel-body">
                    <form class="p-a-1" method="post" asp-action="RsvpForm" id="FormPers">
                        <div class="form-group">
                            <label asp-for="FirstName">Имя</label>
                            <input class="form-control" asp-for="FirstName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="SecondName">Отчество</label>
                            <input class="form-control" asp-for="SecondName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="MiddleName">Фамилия</label>
                            <input class="form-control" asp-for="MiddleName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DateBirth">Дата рождения</label>
                            <input class="form-control" asp-for="DateBirth" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Snils">СНИЛС</label>
                            <input class="form-control" asp-for="Snils" id="snils"/>
                        </div>
                        <button class="btn" type="button" onclick="ResetForm();">Очистить</button>
                        <button class="btn btn-primary" type="submit">Отправить</button>
                    </form>
                </div>
                </div>
</body>
</htm>
